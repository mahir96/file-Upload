<div class="container">
    <div class="row">
        <h1>File Upload</h1>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="file-field input-field">
                <div class="btn amber lighten-2">
                    <span class="text-white">File</span>
                    <input name="myimg" type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <button type="submit" class="btn waves-effect amber darken-4 waves-light"> Send
                <i class="fas fa-cloud-upload-alt"></i>
            </button>
        </form>
        <br>
        <img src="{{file}}" alt="" class="responsive-img">
    </div>
</div>